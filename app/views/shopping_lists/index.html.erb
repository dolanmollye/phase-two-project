<h1>Shopping List</h1>

<%= form_for @shopping_list do |f| %>
    <%= f.label :name, "Ingredients to buy:" %>
    <%= f.text_field :name %>

    <%= f.submit %>
<% end %>

<ul>
  <% @shopping_lists.each do |list| %>
  <li><%= list.name %></li>
  <li><%= button_to 'Remove', shopping_list_path(list), method: 'delete' %></li>
  <% end %>
</ul>
